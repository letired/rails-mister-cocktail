<div class="jumbotron text-center">
  <h1>Welcome to MisterCocktail!</h1>
</div>
<div class="container bg-white">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <%= link_to cocktail, class: "card-link" do  %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://www.placecage.com/400/400');">
          <div class="card-category"><i class="fa fa-glass" aria-hidden="true"></i></div>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
  <%= link_to "Create a new cocktail!", new_cocktail_path, class: "btn btn-primary"  %>
</div>



