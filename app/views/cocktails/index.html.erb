<div class="banner text-center" style="background-image: linear-gradient(255deg, rgba(0,0,0,0.1), rgba(0,0,0,0.5)), url(<%= image_path('squares.jpg') %>);">
  <div class="banner-content">
    <h1>mixology</h1>
    <%= link_to "Create a cocktail!", new_cocktail_path, class: "button-blackandwhite btn" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.7)), url('https://www.placecage.com/g/600/600');">
        <div class="card-category"><%= cocktail.name %></div>
        <div class="card-description">
          <dl>
            <dt><%= "Ingredients:" if doses?(cocktail) %></dt>
            <% three_doses(cocktail).each do |dose| %>
            <dd><%= dose.description %> - <%= dose.ingredient.name %></dd>
            <% end %>
            <dd><%= only_three(cocktail) %></dd>
          </dl>
        </div>
      </div>
      <%= link_to cocktail, class: "card-link" do  %>
      <% end %>
    </div>
    <% end %>
  </div>
  <hr>
</div>



