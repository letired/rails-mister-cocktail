<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2><%= @cocktail.name %></h2>
      <ul>
      <% @cocktail.doses.all.each do |dose| %>
      <li><%= dose.description %> - <%= dose.ingredient.name %> - <%= link_to "Delete", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Delete?" } %></li>
      <% end %>
      </ul>
    </div>
  </div>
  <p><%= link_to "Add the dosage", new_cocktail_dose_path(@cocktail) %></p>
  <p><%= link_to "Destroy this cocktail", @cocktail, method: :delete, data: { confirm: "Delete?" }  %></p>
</div>
