<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2><%= @cocktail.name %></h2>
      <% if @cocktail.photo? %>
        <%= cl_image_tag @cocktail.photo.path, height: 500, crop: :fill %>
        <hr>
      <% end %>
      <ul>
      <% @cocktail.doses.all.each do |dose| %>
      <li><%= dose.description %> - <%= dose.ingredient.name %> - <%= link_to "Delete", dose, method: :delete, data: { confirm: "Delete?" } %></li>
      <% end %>
      </ul>
    </div>
  </div>
  <ul class="list-unstyled">
    <li><%= link_to "Add an Ingredient", new_cocktail_dose_path(@cocktail), class: "btn button-blackandwhite-success" %></li>
    <li><%= link_to "Delete this cocktail", @cocktail, method: :delete, data: { confirm: "Delete?" }, class: "btn button-blackandwhite-danger"  %></li>
  </ul>
</div>
